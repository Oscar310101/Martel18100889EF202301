<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F3E9E9">


    <TextView
        android:id="@+id/txtid"
        android:layout_width="93dp"
        android:layout_height="27dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/txtMovie"
        app:layout_constraintEnd_toStartOf="@+id/txtDuration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtMovie"
        android:layout_width="93dp"
        android:layout_height="27dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="50dp"
        android:fontFamily="sans-serif-black"
        android:text="TextView"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/txtDirector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtid" />

    <TextView
        android:id="@+id/txtDuration"
        android:layout_width="93dp"
        android:layout_height="27dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="12dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/txtDirector"
        app:layout_constraintEnd_toStartOf="@+id/txtImage"
        app:layout_constraintStart_toEndOf="@+id/txtid"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtImage"
        android:layout_width="93dp"
        android:layout_height="27dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtDuration"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDirector"
        android:layout_width="93dp"
        android:layout_height="27dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="145dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtMovie"
        app:layout_constraintTop_toBottomOf="@+id/txtDuration" />
</androidx.constraintlayout.widget.ConstraintLayout>